{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "./dist",
        "jsx": "react",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": false,
        "strict": false,
        "skipLibCheck": true,
        "declaration": false,
        "sourceMap": false
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "exclude": [
        "./node_modules/**/*",
        "./dist/**/*"
    ]
}